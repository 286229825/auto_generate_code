<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="mapper.AuthorityMapper">

	<sql id="query_where">
		<if test="id != null">
			and id like CONCAT('%',#{id},'%')
		</if>
		<if test="type != null">
			and type like CONCAT('%',#{type},'%')
		</if>
	</sql>

	<insert id="insertOne" parameterType="Authority">
		INSERT INTO authority(
			id,
			type		) VALUES (
			#{id},
			#{type}		)
	</insert>

	<insert id="insertBatch" parameterType="List">
		INSERT INTO authority(
			id,
			type		) VALUES
		<foreach collection="list" item="item" index="index"
			separator=",">
			(
			#{item.id},
			
			#{item.type})
		</foreach>
	</insert>

	<delete id="deleteOne" parameterType="int">
		DELETE FROM authority
		WHERE
		id=#{id}
	</delete>

	<delete id="deleteBatch" parameterType="List">
		DELETE FROM authority
		WHERE id IN
		<foreach collection="list" item="item" open="(" close=")"
			separator=",">
			#{item}
		</foreach>
	</delete>

	<update id="updateOne" parameterType="Authority">
		UPDATE authority
		<set>
			id = #{id},
			type = #{type}		</set>
		WHERE id=#{id}
	</update>

	<update id="updateBatch" parameterType="List">
		<foreach collection="list" item="item" open="" close="" separator=";">
		UPDATE authority
		<set>
			id = #{item.id},
			type = #{item.type}		</set>
		WHERE id=#{item.id}
		</foreach>
	</update>

	<select id="selectByCondition" parameterType="Authority" resultType="Authority">
		SELECT * FROM authority
		<where>
			<include refid="query_where"></include>
		</where>
	</select>

	<select id="selectByPage" parameterType="Authority" resultType="Authority">
		SELECT * FROM authority
		<where>
			<include refid="query_where"></include>
		</where>
		LIMIT #{startRow},#{rows}
	</select>

</mapper>